{
  "name": "Aardium",
  "productName": "Aardium",
  "version": "1.0.0",
  "description": "A minimal Electron app for Aardvark",
  "license": "MIT",
  "author": {
    "name": "The Aardvark Platform Team",
    "url": "http://aardvark.graphics"
  },
  "scripts": {
    "postinstall": "./node_modules/.bin/electron-rebuild node-shared-mem",
    "start": "electron . --debug",
    "dist-win64": "electron-packager . Aardium --platform=win32 --arch=x64 --icon ./aardvark.ico --out dist --overwrite",
    "dist-linux64": "electron-packager . Aardium --platform=linux --arch=x64 --icon ./aardvark.ico --out dist --overwrite",
    "dist": "yarn dist-win64 && yarn dist-linux64",
    "zip": "yarn dist && folder-zip-sync dist/Aardium-win32-x64 dist/Aardium-win32-x64.zip && folder-zip-sync dist/Aardium-linux-x64 dist/Aardium-linux-x64.zip"
  },
  "main": "main.js",
  "repository": "https://github.com/electron/electron-quick-start",
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "node-getopt": "^0.3.2",
    "node-shared-mem": "^1.0.6"
  },
  "devDependencies": {
    "electron": "^7.1.9",
    "electron-packager": "^14.2.0",
    "electron-rebuild": "^1.8.8",
    "folder-zip-sync": "^1.0.5"
  }
}
